<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ProfileBilgi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_color_buz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewAdSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/oswald"
            android:text="Kullanici_Adi"
            android:textColor="#5D64B4"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfileResim"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewProfileResim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/profile_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageViewProfileEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/profile_edit_pic"
            app:layout_constraintBottom_toTopOf="@+id/imageViewCikisYap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewCikisYap"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cikis_yap_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewProfileEdit" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oswald"
        android:text="Şehir:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSehir"
        app:layout_constraintTop_toBottomOf="@+id/ProfileBilgi" />

    <TextView
        android:id="@+id/textViewSehir"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        android:background="@drawable/edittextarkaplan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="İlgi Alanı:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewIlgiAlani"
        app:layout_constraintTop_toBottomOf="@+id/textViewSehir" />

    <TextView
        android:id="@+id/textViewIlgiAlani"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="Geliştirdiği Dil:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewGelistirdigiDil"
        app:layout_constraintTop_toBottomOf="@+id/textViewIlgiAlani" />

    <TextView
        android:id="@+id/textViewGelistirdigiDil"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="Yaş:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewYas"
        app:layout_constraintTop_toBottomOf="@+id/textViewGelistirdigiDil" />

    <TextView
        android:id="@+id/textViewYas"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="Cinsiyet:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewCinsiyet"
        app:layout_constraintTop_toBottomOf="@+id/textViewYas" />

    <TextView
        android:id="@+id/textViewCinsiyet"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="Github:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewGithub"
        app:layout_constraintTop_toBottomOf="@+id/textViewCinsiyet" />

    <TextView
        android:id="@+id/textViewGithub"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/oswald"
        android:text="Linkedin:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewLinkedin"
        app:layout_constraintTop_toBottomOf="@+id/textViewGithub" />

    <TextView
        android:id="@+id/textViewLinkedin"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextarkaplan"
        android:textSize="18sp"
        android:fontFamily="@font/oswald"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />


</androidx.constraintlayout.widget.ConstraintLayout>